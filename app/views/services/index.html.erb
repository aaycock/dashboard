<!-- Page title -->
<div id="pagetitle">
  <div class="wrapper">
    <h1>Service &rarr; <span>List</span></h1>
    <!-- Quick search box -->
    <form action="" method="get"><input class="" type="text" id="q" name="q" /></form>
  </div>
</div>
<!-- End of Page title -->

<!-- Page content -->
<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">

            <h3>Services</h3>

            <% if flash[:notice] -%>

         <p><div class="box box-success closeable"><%= flash[:notice] %></div></p>

        <% end %>

            <table class="stylized full" cellpadding="0" cellspacing="0" border="0">
              <thead>
                <tr>
                 <th>Account</th>
    <th>Name</th>
    <th>Description</th>
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @services.each do |service| %>
                  <tr>
                    <td><%=h service.account_id %></td>
    <td><%=h service.name %></td>
    <td><%=h service.description %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to image_tag("/img/delete.png", :border=>0), service, :confirm => 'Are you sure?', :method => :delete %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

<%= link_to 'New service', new_service_path %>

          </section>
          <!-- End of Left column/section -->

          <!-- Right column/section -->
          <aside class="column width2">
            <div id="rightmenu">
              <header>
                <h3>You might also want to check out...</h3>
              </header>
              <dl class="first">
                <dt><img width="16" height="16" alt="Basic styles" src="/img/style.png"></dt>
                <dd><a href="styles.html">Basic styles</a></dd>
                <dd class="last">Basic elements and styles</dd>

                <dt><img width="16" height="16" alt="Form validation" src="/img/book.png"></dt>
                <dd><a href="http://docs.jquery.com/Plugins/Validation">Form validation</a></dd>
                <dd class="last">jQuery form validation documentation</dd>
              </dl>
            </div>
            <div class="content-box">
              <header>
                <h3>Quick info</h3>
              </header>
              <section>
                <q>A form is an area that can contain form elements.
                  Form elements are elements that allow the user to enter information (like text fields, textarea fields, drop-down menus, radio buttons, checkboxes, etc.) in a form.
                  A form is defined with the &lt;form&gt; tag.
                  <cite>w3schools.com</cite></q>
              </section>
            </div>
          </aside>
          <!-- End of Right column/section -->

        </div>
        <!-- End of Wrapper -->
      </div>
      <!-- End of Page content -->